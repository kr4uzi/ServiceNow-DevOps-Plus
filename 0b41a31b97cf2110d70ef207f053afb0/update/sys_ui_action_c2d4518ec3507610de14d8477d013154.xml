        <script><![CDATA[function devops_plus_OpenRemoteTableScript() {

	const scripts = g_scratchpad.devops_plus_remote_table_scripts;
	if (scripts.length == 0) {
		var gmf = new GlideModalForm('Remote Table Script', 'sys_script_vtable', function () {
			g_navigation.reloadWindow();
		});
		gmf.addParm('sysparm_query', 'table=' + g_form.getValue('name'));
		gmf.setSysID('-1');
		gmf.render();
	} else if (scripts.length == 1) {
		if (typeof isDevStudio != 'undefined' && isDevStudio) {
			const key = {
				type: 'form',
				table: 'sys_script_vtable',
				sysId: scripts[0],
				recordType: 'Remote Table'
			};
			devStudioAPI.openStudioTab('sys_script_vtable.do?sys_id=' + scripts[0]);
		} else {
			g_navigation.openRecord('sys_script_vtable', scripts[0]);
		}
	} else {
		var gmf = new GlideModalForm('Remote Table Scripts', 'sys_script_vtable_list', function () {
			g_navigation.reloadWindow();
		});
		gmf.addParm('sysparm_query', 'table=' + g_form.getValue('name'));
		gmf.render();
	}
}]]></script>
