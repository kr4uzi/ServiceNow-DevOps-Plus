        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	const MAX_REMOTE_TABLE_SCRIPTS = 10;
	const vtableScriptGr = new GlideRecord('sys_script_vtable');
	vtableScriptGr.addQuery('table', current.name);
	vtableScriptGr.orderByDesc('active');
	vtableScriptGr.setLimit(MAX_REMOTE_TABLE_SCRIPTS);
	vtableScriptGr.query();
	
	g_scratchpad.devops_plus_remote_table_scripts = [];
	while (vtableScriptGr.next()) {
		g_scratchpad.devops_plus_remote_table_scripts.push(vtableScriptGr.getUniqueValue());
	}

	if (g_scratchpad.devops_plus_remote_table_scripts.length >= MAX_REMOTE_TABLE_SCRIPTS) {
		gs.warn('More Remote Table Scripts than expected, please increase the MAX_REMOTE_TABLE_SCRIPTS value');
	}

})(current, previous);]]></script>
