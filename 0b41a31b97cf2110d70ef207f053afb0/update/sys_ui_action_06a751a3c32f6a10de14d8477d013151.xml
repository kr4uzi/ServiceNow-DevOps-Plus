        <script><![CDATA[function decryptDialog() {
	const field = prompt('Enter the encrypted field name:');
	if (!field) return;

	const ga = new GlideAjax('x_424426_devops.DecryptUtilClient');
	ga.addParam('sysparm_name', 'decrypt');
	ga.addParam('table', g_form.getTableName());
	ga.addParam('sys_id', g_form.getUniqueValue());
	ga.addParam('field', field);
	ga.getXMLAnswer(function (result) {
		result = JSON.parse(result);
		if (result?.status != 'success') {
			g_form.addErrorMessage(JSON.stringify(result, null, 2).replaceAll('\n', '<br />'));
			return;
		}

		var dd = new GlideModal('hierarchical_progress_viewer', false, '40em', '10em');
		dd.setTitle('Decrypt Status');
		dd.setPreference('sysparm_renderer_execution_id', result.execution_id);
		dd.on('executionComplete', function (res) {
			if (!res.result) {
				g_form.addErrorMessage(JSON.stringify(res, null, 2).replaceAll('\n', '<br />'));
				return;
			}
			
			g_form.addInfoMessage(res.result.script.replaceAll('\n', '<br />'));
		});
		dd.render();
	});
}]]></script>
