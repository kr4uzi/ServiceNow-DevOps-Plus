        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	if (hasAuditEnabled(current.super_class.name)) {
		const dictGr = new GlideRecord('sys_dictionary');
		dictGr.addQuery('internal_type', 'collection');
		dictGr.addQuery('name', current.name);
		dictGr.addQuery('audit', false);
		dictGr.setLimit(1);
		dictGr.query();
		if (dictGr.next()) {
			gs.addInfoMessage(`Audit enabled on base, but not on this table. Click <a target="_blank" href="/nav_to.do?uri=%2Fsys_dictionary.do%3Fsys_id%3D${dictGr.sys_id}">here</a> to enable it`);
		}
	}
	
	function hasAuditEnabled(klass) {
		const dictGr = new GlideRecord('sys_dictionary');
		dictGr.addQuery('internal_type', 'collection');
		dictGr.addQuery('name', klass);
		dictGr.addQuery('audit', true);
		dictGr.setLimit(1);
		dictGr.query();
		return dictGr.hasNext();
	}

})(current, previous);]]></script>
